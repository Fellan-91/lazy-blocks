{
  "name": "lazy-blocks",
  "title": "Lazy Blocks",
  "version": "3.2.1",
  "description": "No hassle Gutenberg blocks for WordPress developers",
  "license": "GPL-2.0",
  "author": "Lazy Blocks Team <https://www.lazyblocks.com/>",
  "scripts": {
    "dev": "wpeg --build --watch",
    "build": "wpeg --build",
    "build:prod": "npm run make-pot && npm run make-json && wpeg --build && npm run zip",
    "bump-patch": "gulp bump --type patch",
    "bump-minor": "gulp bump --type minor",
    "bump-major": "gulp bump --type major",
    "bump-prerelease": "gulp bump --type prerelease",
    "zip": "gulp zip",
    "php-lint": "composer phpcs",
    "php-lint-fix": "composer phpcbf",
    "css-lint": "stylelint --custom-syntax postcss-scss \"assets/**/*.scss\"",
    "css-lint-fix": "stylelint --fix --custom-syntax postcss-scss \"assets/**/*.scss\"",
    "js-lint": "eslint --ext .js assets/ controls/",
    "js-lint-fix": "eslint --ext .js --fix assets/ controls/",
    "make-pot": "composer wp -- i18n make-pot ./ ./languages/lazy-blocks.pot --skip-audit --exclude=vendor,vendors,node_modules,dist-zip --headers='{\"Last-Translator\":\"Lazy Blocks Team\",\"Report-Msgid-Bugs-To\":\"https://github.com/nk-crew/lazyblocks/issues\"}'",
    "make-json": "po2json ./languages/lazy-blocks.pot ./languages/lazy-blocks.json --format=jed1.x --pretty --domain=lazy-blocks",
    "prepare": "husky install",
    "postinstall": "composer install"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.6",
    "@dnd-kit/sortable": "^7.0.1",
    "@dnd-kit/utilities": "^3.2.1",
    "@wordpress/base-styles": "^3.6.0",
    "ace-builds": "^1.14.0",
    "array-move": "^4.0.0",
    "classnames": "^2.3.2",
    "deep-equal": "^2.1.0",
    "gutenberg-react-select-styles": "0.0.2",
    "react-ace": "^10.1.0",
    "react-autosize-textarea": "^7.1.0",
    "react-select": "^5.7.0",
    "react-virtualized": "^9.22.3",
    "shorthash": "0.0.2",
    "slugify": "^1.6.5",
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-react-jsx": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "@svgr/webpack": "^6.5.1",
    "base64-inline-loader": "^2.0.1",
    "browserslist-config-nk": "^1.1.1",
    "cross-env": "^7.0.3",
    "del": "^6.1.1",
    "eslint-config-nk": "^1.2.0",
    "gulp": "^4.0.2",
    "gulp-change-file-content": "^1.0.1",
    "gulp-zip": "^5.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "md5": "^2.3.0",
    "micromatch": "^4.0.5",
    "parse-version-string": "^1.0.1",
    "po2json": "^0.4.5",
    "prettier-config-nk": "^1.1.1",
    "stylelint-config-nk": "^1.1.4",
    "wpeg": "^1.2.7",
    "yargs": "^17.6.2"
  }
}
